<!-- Views/Customer/Index.cshtml -->
@model CustomerDashboardViewModel
@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4>My Profile</h4>
                </div>
                <div class="card-body">
                    <h5>@Model.Customer.FirstName @Model.Customer.LastName</h5>
                    <p class="mb-1"><strong>Email:</strong> @Model.Customer.Email</p>
                    <p class="mb-1"><strong>Phone:</strong> @Model.Customer.PhoneNumber</p>
                    <p class="mb-1"><strong>Address:</strong> @Model.Customer.Address</p>
                    <p class="mb-1"><strong>Member Since:</strong> @Model.Customer.RegistrationDate.ToString("d")</p>
                    <div class="mt-3">
                        <a asp-action="Profile" class="btn btn-sm btn-outline-primary">Edit Profile</a>
                        <a asp-action="ChangePassword" class="btn btn-sm btn-outline-secondary">Change Password</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Recent Orders</h4>
                </div>
                <div class="card-body">
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td>@order.RowKey</td>
                                            <td>@order.OrderDate.ToString("g")</td>
                                            <td>R@(order.TotalAmount.ToString("N2"))</td>
                                            <td>
                                                <span class="badge @(order.Status == "Completed" ? "bg-success" :
                                                                order.Status == "Processing" ? "bg-warning" : "bg-info")">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-action="OrderDetails" asp-route-id="@order.RowKey" class="btn btn-sm btn-outline-primary">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">You haven't placed any orders yet.</div>
                        <a asp-action="Products" class="btn btn-primary">Browse Products</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>