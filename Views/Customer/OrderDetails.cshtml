<!-- Views/Customer/OrderDetails.cshtml -->
@model Order
@{
    ViewData["Title"] = "Order Details";
}

<div class="container py-4">
    <!-- Back to Orders Link -->
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="Orders" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Orders
            </a>
        </div>
    </div>

    <!-- Order Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Order #@Model.RowKey</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Order Date</th>
                                    <td>@Model.OrderDate.ToString("MMM dd, yyyy h:mm tt")</td>
                                </tr>
                                <tr>
                                    <th>Customer ID</th>
                                    <td>@Model.CustomerId</td>
                                </tr>
                                <tr>
                                    <th>Order Status</th>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(Model.Status) fs-6">
                                            @Model.Status
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Total Amount</th>
                                    <td class="h5 text-success">R@(Model.TotalAmount.ToString("N2"))</td>
                                </tr>
                                <tr>
                                    <th>Number of Items</th>
                                    <td>@Model.Items.Count</td>
                                </tr>
                                <tr>
                                    <th>Last Updated</th>
                                    <td>@Model.Timestamp?.ToString("MMM dd, yyyy h:mm tt")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Items -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Order Items</h5>
                </div>
                <div class="card-body">
                    @if (Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-end">Unit Price</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <i class="bi bi-box-seam" style="font-size: 1.5rem;"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@item.ProductName</h6>
                                                        <small class="text-muted">ID: @item.ProductId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-end">R@(item.UnitPrice.ToString("N2"))</td>
                                            <td class="text-end">R@((item.Quantity * item.UnitPrice).ToString("N2"))</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-group-divider">
                                    <tr>
                                        <th colspan="3" class="text-end">Subtotal:</th>
                                        <td class="text-end">R@(Model.TotalAmount.ToString("N2"))</td>
                                    </tr>
                                    <tr>
                                        <th colspan="3" class="text-end">Tax:</th>
                                        <td class="text-end">R0.00</td>
                                    </tr>
                                    <tr class="fw-bold">
                                        <th colspan="3" class="text-end">Total:</th>
                                        <td class="text-end">R@(Model.TotalAmount.ToString("N2"))</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-cart-x text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">No items in this order</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Order Status Timeline -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Order Status Timeline</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item @(Model.Status != "Pending" ? "completed" : "active")">
                            <div class="timeline-point">
                                <i class="bi bi-cart"></i>
                            </div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Order Placed</h6>
                                <p class="text-muted mb-0">@Model.OrderDate.ToString("MMM dd, yyyy h:mm tt")</p>
                            </div>
                        </div>
                        <div class="timeline-item @(Model.Status == "Processing" || Model.Status == "Completed" ? "completed" : (Model.Status == "Pending" ? "" : "active"))">
                            <div class="timeline-point">
                                <i class="bi bi-gear"></i>
                            </div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Processing</h6>
                                <p class="text-muted mb-0">Order is being prepared</p>
                            </div>
                        </div>
                        <div class="timeline-item @(Model.Status == "Completed" ? "completed" : "")">
                            <div class="timeline-point">
                                <i class="bi bi-check-circle"></i>
                            </div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Completed</h6>
                                <p class="text-muted mb-0">Order has been delivered</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Support Information -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="text-primary">Need Help?</h5>
                    <p class="text-muted">If you have any questions about your order, please contact our customer support team.</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="mailto:support@abcretail.com" class="btn btn-outline-primary">
                            <i class="bi bi-envelope"></i> Email Support
                        </a>
                        <a href="tel:+1-555-0123" class="btn btn-outline-secondary">
                            <i class="bi bi-telephone"></i> Call Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 3rem;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 2rem;
        border-left: 2px solid #dee2e6;
        margin-left: 1.5rem;
    }

        .timeline-item:last-child {
            border-left: 2px solid transparent;
        }

        .timeline-item.completed {
            border-left-color: #198754;
        }

        .timeline-item.active {
            border-left-color: #0d6efd;
        }

    .timeline-point {
        position: absolute;
        left: -1.5rem;
        top: 0;
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
        border: 2px solid #dee2e6;
    }

    .timeline-item.completed .timeline-point {
        background: #198754;
        color: white;
        border-color: #198754;
    }

    .timeline-item.active .timeline-point {
        background: #0d6efd;
        color: white;
        border-color: #0d6efd;
    }

    .timeline-content {
        margin-left: 2rem;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .table th {
        font-weight: 600;
        color: #6c757d;
    }

    .btn {
        border-radius: 8px;
    }

    .badge {
        font-size: 0.9em;
    }
</style>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        switch (status)
        {
            case "Completed":
                return "bg-success";
            case "Processing":
                return "bg-warning";
            case "Pending":
                return "bg-info";
            default:
                return "bg-secondary";
        }
    }
}