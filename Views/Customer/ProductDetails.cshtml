<!-- Views/Customer/ProductDetails.cshtml -->
@model Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-4">
    <!-- Back to Products Link -->
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="Products" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Products
            </a>
        </div>
    </div>

    <!-- Product Details Section -->
    <div class="row">
        <!-- Product Image -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@Model.ImageUrl" class="card-img-top product-detail-image" alt="@Model.Name"
                     style="max-height: 500px; object-fit: contain;">
            </div>
        </div>

        <!-- Product Information -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h1 class="h2 text-primary">@Model.Name</h1>

                    <!-- Category Badge -->
                    <div class="mb-3">
                        <span class="badge bg-secondary fs-6">@Model.Category</span>
                    </div>

                    <!-- Price -->
                    <div class="mb-3">
                        <h3 class="text-success">R @(Model.Price.ToString("N2"))</h3>
                    </div>

                    <!-- Stock Status -->
                    <div class="mb-3">
                        @if (Model.StockQuantity > 0)
                        {
                            <span class="badge bg-success fs-6">
                                <i class="bi bi-check-circle"></i> In Stock (@Model.StockQuantity available)
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger fs-6">
                                <i class="bi bi-x-circle"></i> Out of Stock
                            </span>
                        }
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <h5>Description</h5>
                        <p class="text-muted">@Model.Description</p>
                    </div>

                    <!-- Order Form (only show if in stock) -->
                    @if (Model.StockQuantity > 0)
                    {
                        <form asp-action="PlaceOrder" method="post" class="mt-auto">
                            <input type="hidden" name="productId" value="@Model.RowKey" />

                            <div class="row align-items-end">
                                <div class="col-md-6 mb-3">
                                    <label for="quantity" class="form-label">Quantity</label>
                                    <input type="number" class="form-control" id="quantity" name="quantity"
                                           min="1" max="@Model.StockQuantity" value="1" required>
                                    <div class="form-text">Max: @Model.StockQuantity available</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="bi bi-cart-plus"></i> Add to Cart
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle"></i> This product is currently out of stock.
                            Please check back later.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Information Section -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Product Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="30%">Product ID</th>
                                    <td>@Model.RowKey</td>
                                </tr>
                                <tr>
                                    <th>Category</th>
                                    <td>@Model.Category</td>
                                </tr>
                                <tr>
                                    <th>Price</th>
                                    <td class="text-success">R @(Model.Price.ToString("N2"))</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="30%">Availability</th>
                                    <td>
                                        @if (Model.StockQuantity > 0)
                                        {
                                            <span class="text-success">In Stock (@Model.StockQuantity available)</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Out of Stock</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Stock Quantity</th>
                                    <td>@Model.StockQuantity</td>
                                </tr>
                                @if (Model.Timestamp.HasValue)
                                {
                                    <tr>
                                        <th>Last Updated</th>
                                        <td>@Model.Timestamp.Value.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Quantity validation
            var maxQuantity = @Model.StockQuantity; // This was the JS expression error
            $('#quantity').on('change', function() {
                let quantity = parseInt($(this).val()) || 0; // Added fallback for NaN

                if (quantity < 1) {
                    $(this).val(1);
                } else if (quantity > maxQuantity) {
                    $(this).val(maxQuantity);
                    alert('Maximum available quantity is ' + maxQuantity);
                }
            });

            // Form submission handling
            $('form').on('submit', function(e) {
                const quantity = parseInt($('#quantity').val()) || 0; // Added fallback for NaN
                if (quantity < 1 || quantity > maxQuantity) {
                    e.preventDefault();
                    alert('Please enter a valid quantity between 1 and ' + maxQuantity);
                }
            });
        });
    </script>

    <style>
        .product-detail-image {
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
        }

        .card {
            border: none;
            border-radius: 10px;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .btn {
            border-radius: 8px;
        }

        .badge {
            font-size: 0.9em;
        }

        .table th {
            font-weight: 600;
            color: #6c757d;
        }
    </style>
}