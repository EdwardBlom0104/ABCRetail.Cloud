@model ABCRetail.Cloud.Models.Product
@{
    ViewData["Title"] = "Add New Product";
}

<div class="container product-create-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card product-card-create shadow-lg">
                <div class="card-header bg-gradient-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-box-open mr-2"></i>@ViewData["Title"]
                        </h3>
                        <div class="product-icon-circle">
                            <i class="fas fa-plus"></i>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <!-- Product Image Upload -->
                            <div class="col-md-5">
                                <div class="product-image-section">
                                    <h5 class="section-title mb-3">
                                        <i class="fas fa-image mr-2"></i>Product Image
                                    </h5>
                                    <div class="product-image-upload-area text-center mb-4">
                                        <div class="image-preview-container mb-3">
                                            <img id="imagePreview" src="https://via.placeholder.com/300x200?text=Product+Image"
                                                 class="img-fluid rounded product-image-preview" alt="Product preview"
                                                 onerror="this.onerror=null;this.src='/images/placeholder.jpg'">
                                        </div>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="imageFile" name="imageFile" accept="image/*">
                                            <label class="custom-file-label btn btn-outline-primary btn-block" for="imageFile">
                                                <i class="fas fa-cloud-upload-alt mr-2"></i>Choose Product Image
                                            </label>
                                        </div>
                                        <small class="text-muted mt-2 d-block">
                                            Supported formats: JPG, PNG, GIF (Max 5MB)
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <!-- Product Details -->
                            <div class="col-md-7">
                                <h5 class="section-title mb-3">
                                    <i class="fas fa-info-circle mr-2"></i>Product Details
                                </h5>

                                <div class="form-group floating-label">
                                    <input asp-for="Name" class="form-control form-control-lg" placeholder=" " required />
                                    <label asp-for="Name" class="control-label">Product Name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-group floating-label">
                                    <textarea asp-for="Description" class="form-control" placeholder=" " rows="4"></textarea>
                                    <label asp-for="Description" class="control-label">Product Description</label>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group floating-label">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">R</span>
                                                </div>
                                                <input asp-for="Price"
                                                       type="number"
                                                       step="0.01"
                                                       min="0.01"
                                                       class="form-control"
                                                       placeholder=" "
                                                       required
                                                       value="@(Model?.Price > 0 ? Model.Price.ToString("0.00") : "")" />
                                            </div>
                                            <label asp-for="Price" class="control-label" style="left: 45px;">Price (ZAR)</label>
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group floating-label">
                                            <input asp-for="StockQuantity"
                                                   type="number"
                                                   min="0"
                                                   class="form-control"
                                                   placeholder=" "
                                                   required />
                                            <label asp-for="StockQuantity" class="control-label">Stock Quantity</label>
                                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group floating-label">
                                    <input asp-for="Category" class="form-control" placeholder=" " />
                                    <label asp-for="Category" class="control-label">Category</label>
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="form-actions d-flex justify-content-between align-items-center">
                            <div class="form-info">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle mr-1"></i>
                                    All fields marked with * are required
                                </small>
                            </div>
                            <div class="button-group">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg mr-3">
                                    <i class="fas fa-arrow-left mr-2"></i>Back to Products
                                </a>
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-check-circle mr-2"></i>Add Product
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .product-create-container {
            padding: 3rem 0;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }

        .product-card-create {
            border: none;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            position: relative;
        }

        .product-icon-circle {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .section-title {
            color: #495057;
            font-weight: 600;
            border-bottom: 2px solid #e9ecef;
            padding-bottom: 8px;
        }

        .product-image-section {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 15px;
            border: 1px solid #e9ecef;
        }

        .product-image-upload-area {
            border: 3px dashed #dee2e6;
            border-radius: 15px;
            padding: 30px 20px;
            transition: all 0.3s ease;
            background: white;
        }

        .product-image-preview {
            max-height: 250px;
            object-fit: cover;
            transition: all 0.3s ease;
        }

        .floating-label {
            position: relative;
            margin-bottom: 2rem;
        }

            .floating-label label {
                position: absolute;
                top: 0;
                left: 0;
                height: 100%;
                padding: 1rem 0.75rem;
                pointer-events: none;
                transform-origin: 0 0;
                transition: all 0.2s ease-out;
                color: #6c757d;
            }

        .form-control:focus ~ label,
        .form-control:not(:placeholder-shown) ~ label {
            transform: translateY(-1.2rem) scale(0.85);
            opacity: 0.8;
            padding: 0 0.5rem;
            background: white;
            color: #667eea;
            font-weight: 600;
        }

        .input-group-text {
            background: #667eea;
            color: white;
            border: 2px solid #667eea;
        }

        .btn-success {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border: none;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Enhanced image handling
        document.getElementById('imageFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const preview = document.getElementById('imagePreview');

            if (file) {
                // Validate file
                if (file.size > 5 * 1024 * 1024) {
                    alert('File size must be less than 5MB');
                    this.value = '';
                    return;
                }

                if (!file.type.match('image.*')) {
                    alert('Please select a valid image file');
                    this.value = '';
                    return;
                }

                // Show loading state
                preview.style.opacity = '0.5';

                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.opacity = '1';
                }
                reader.readAsDataURL(file);

                // Update filename display
                const fileName = file.name.length > 20 ?
                    file.name.substring(0, 17) + '...' : file.name;
                this.nextElementSibling.innerHTML =
                    `<i class="fas fa-check mr-2"></i>${fileName}`;
            }
        });

        // Price validation
        document.querySelector('input[asp-for="Price"]').addEventListener('input', function() {
            if (this.value <= 0) {
                this.classList.add('is-invalid');
            } else {
                this.classList.remove('is-invalid');
            }
        });

        // Initialize floating labels
        document.querySelectorAll('.floating-label input, .floating-label textarea').forEach(el => {
            const updateLabel = () => {
                const label = el.parentElement.querySelector('label');
                if (el.value) {
                    label.style.transform = 'translateY(-1.2rem) scale(0.85)';
                    label.style.color = '#667eea';
                } else {
                    label.style = '';
                }
            };

            el.addEventListener('focus', () => {
                el.parentElement.querySelector('label').style.color = '#667eea';
            });

            el.addEventListener('blur', updateLabel);
            el.addEventListener('input', updateLabel);
            updateLabel(); // Initialize
        });
    </script>
}